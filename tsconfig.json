{
    "compilerOptions": {
      "target": "ES2017",
      "module": "commonjs",
      "noImplicitAny": false,
      "noImplicitReturns": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "outDir": "dist",
      "paths": {
        "*": ["./*"]
      },
      "types": ["node", "jest"]
    },
    "include": [
      "./src/**/*.ts",
      "./global.d.ts"
    ],
    "exclude": ["./node_modules"],
    "compileOnSave": false
  }